{
  "name": "@ktsstudio/mediaproject-style",
  "version": "1.0.0",
  "author": "KTS Studio",
  "license": "MIT",
  "description": "Package with common styles for media projects",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "scripts": {
    "rm-source-maps": "rimraf public/**/*.js.map",
    "lint": "eslint src --fix",
    "codestyle": "prettier src --write \"*.{ts,js}?(x)\"",
    "tsc-check": "tsc --skipLibCheck --noEmit --project tsconfig.json",
    "build-ts": "tsc --module es6 --target es6 --outDir dist --declarationDir dist/types",
    "build-styles": "cpx src/**/*.*css dist",
    "build": "yarn run rm-source-maps; yarn run build-ts; yarn run build-styles",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,js}?(x)": [
      "yarn run lint",
      "yarn run codestyle"
    ]
  },
  "files": [
    "dist/",
    "package.json",
    "README.md",
    "CHANGELOG.md",
    "logo.png"
  ],
  "devDependencies": {
    "@ktsstudio/mediaproject-utils": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.14.1",
    "cpx": "^1.5.0",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.0.0",
    "prettier": "^2.2.1",
    "styled-components": "^5.3.3",
    "typescript": "^4.1.3",
    "react": "~17.0.0"
  },
  "peerDependencies": {
    "@ktsstudio/mediaproject-utils": "^3.0.0",
    "styled-components": "^5.3.1",
    "react": "~17.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ktsstudio/mediaproject-style.git"
  },
  "private": false,
  "bugs": {
    "url": "https://github.com/ktsstudio/mediaproject-style/issues"
  },
  "homepage": "https://github.com/ktsstudio/mediaproject-style#readme"
}
